#page-expenses.page-content-body
  .page-content-body-section
    %h1 New Expense

    =form_for(@expense) do |f|
      .form-row
        = f.label :date, class: 'form-label'
        = f.date_field(:date)
      
      %br
      .form-row
        = f.label :product_type, class: 'form-label'
        = f.collection_select(:product_type_id, @product_types, :id, :product_type, {:prompt => true}, {:required => false})
      .form-row
        = f.label :name, class: 'form-label'
        = f.text_field :name, :required => true
      .form-row
        = f.label :expense_type, class: 'form-label'
        = f.select :expense_type, @expense_types
      .form-row
        = f.label :vendor, class: 'form-label'
        = f.text_field :vendor, :step => 'any',  :required => true

      %br

      .form-row
        = f.label :amount, class: 'form-label'
        = f.number_field :amount , :step => 'any', :required => true


      .form-row
        = f.submit "Create Expense"