.stats
  .stat-container
    .stat
      .stat-label Items Sold
      .stat-number
        = get_items_sold_count
  .stat-container
    .stat
      .stat-label Total Rev
      .stat-number
        = "$" + get_revenue.to_s
  .stat-container
    .stat
      .stat-label Average
      .stat-number
        = "$" + get_average_revenue.to_s + "/item"

%table#table-products.stripe.order-column
  %thead
    %tr
      %th Product
      %th Items Sold
      %th Revenue
      %th Average Revenue Per Item
      %th Materials Cost
      %th Cost Per Item
      %th Profit
      %th Average Profit Per Item
      %th Margin Per Item
  %tbody
    - get_product_types.each do |product_type|
      %tr
        %td.border-right=product_type.product_type
        %td.border-right=product_type.get_order_items_count
        %td= "$" + product_type.get_revenue.to_s
        %td.border-right= "$" + product_type.get_average_revenue.to_s
        %td= "$" + product_type.get_expenses.to_s
        %td.border-right Need to calculate
        %td= "$" + product_type.get_profit.to_s
        %td= "$" + product_type.get_average_profit.to_s
        %td Need to calculate


:javascript
  $("#table-products").DataTable({
    dom: 'iCfrtS',
    pageLength: -1,
    order: [1, 'desc'],
    orderClasses: true
  });