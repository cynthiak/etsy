#page-orders.page-content-body

  .page-content-body-section
    %h1 Import from Etsy

    .page-content-body-section-box
      %h3 
        Orders
        %span.subtitle EtsySoldOrders2017.csv
      = form_tag import_etsy_orders_path, multipart: true do
        = file_field_tag :file
        = submit_tag "Import Etsy Orders"
  
    .page-content-body-section-box
      %h3 
        Order Items
        %span.subtitle EtsySoldOrderItems2017.csv
      = form_tag import_etsy_order_items_path, multipart: true do
        = file_field_tag :file
        = submit_tag "Import Etsy Order Items"

    .page-content-body-section-box
      %h3 
        Import Etsy Fees
        %span.subtitle Only upload after a statement has closed (there is no functionality to handle duplicate items)
      
      = form_tag import_expenses_path, multipart: true do
        = file_field_tag :file
        = submit_tag "Import Monthly Statement"

  %hr

  .page-content-body-section
    %h1 Import from Square

    .page-content-body-section-box
      %h3 
        Orders
        %span.subtitle transactions-2016-12-04-2016-12-05.csv
      = form_tag import_square_orders_path, multipart: true do
        = file_field_tag :file
        = submit_tag "Import Square Orders"
  
    .page-content-body-section-box
      %h3 
        Order Items
        %span.subtitle items-2016-12-04-2016-12-05.csv
      = form_tag import_square_order_items_path, multipart: true do
        = file_field_tag :file
        = submit_tag "Import Square Order Items"