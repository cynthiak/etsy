#page-products.page-content-body
  .page-content-body-section
    %h1 Orders
    .stats
      .stat-container
        .stat
          .stat-label Total Buyers
          .stat-number
            = @total_buyers
            buyers

      .stat-container
        .stat
          .stat-label Total Orders
          .stat-number
            = @orders.count
            orders

      .stat-container
        .stat
          .stat-label Total Order Items
          .stat-number
            = @total_order_items
            items

      .stat-container
        .stat
          .stat-label Orders Left to Ship
          .stat-number.red
            = @orders_left_to_ship.count
            to ship

      .stat-container
        .stat
          .stat-label Total Revenue
          .stat-number
            = "$" + @total_revenue.to_s

      .stat-container
        .stat
          .stat-label Average Revenue Per Order
          .stat-number
            = "$" + @average_revenue_per_order.to_s + "/order"

      .stat-container
        .stat
          .stat-label Average Revenue Per Order Item
          .stat-number
            = "$" + @average_revenue_per_order_item.to_s + "/item"

      .stat-container
        .stat
          .stat-label Average Items Per Order
          .stat-number= @average_items_per_order

  .page-content-body-section
    %h1 Orders To Ship
    %table#table-orders-toship.stripe
      %thead
        %tr
          %th Order
          %th Sold
          %th Name
          %th Items
          %th Value
          %th Coupon
          %th Shipping
          %th Tax
          %th Refund
          %th Total
          %th Fee
          %th Net
      %tbody
        - @orders_left_to_ship.each do |order|
          %tr
            %td= order.order_number
            %td= order.sale_date
            %td= order.full_name
            %td= order.number_of_items
            %td= "$" + order.order_value.to_s
            %td
              = order.coupon_code
              %span.secondary= order.coupon_details
            %td= "$" + order.shipping.to_s
            %td= "$" + order.sales_tax.to_s
            %td
            %td
              = order.adjusted_order_total? ? "$" + order.adjusted_order_total.to_s + "*" : "$" + order.order_total.to_s
            %td
              = order.adjusted_card_processing_fees? ? "$" + order.adjusted_card_processing_fees.to_s + "*" : "$" + order.card_processing_fees.to_s
            %td
              = order.adjusted_net_order_amount? ? "$" + order.adjusted_net_order_amount.to_s + "*" : "$" + order.order_net.to_s



  .page-content-body-section
    %h1 Completed Orders
    %table#table-orders-completed.stripe
      %thead
        %tr
          %th Order
          %th Sold
          %th Shipped
          %th Name
          %th Items
          %th Value
          %th Coupon
          %th Shipping
          %th Tax
          %th Refund
          %th Total
          %th Fee
          %th Net
      %tbody
        - @completed_orders.each do |order|
          %tr
            %td= order.order_number
            %td= order.sale_date
            %td= order.date_shipped
            %td= order.full_name
            %td= order.number_of_items
            %td= "$" + order.order_value.to_s
            %td
              = order.coupon_code
              %span.secondary= order.coupon_details
            %td= "$" + order.shipping.to_s
            %td= "$" + order.sales_tax.to_s
            %td
            %td
              = order.adjusted_order_total? ? "$" + order.adjusted_order_total.to_s + "*" : "$" + order.order_total.to_s
            %td
              = order.adjusted_card_processing_fees? ? "$" + order.adjusted_card_processing_fees.to_s + "*" : "$" + order.card_processing_fees.to_s
            %td
              = order.adjusted_net_order_amount? ? "$" + order.adjusted_net_order_amount.to_s + "*" : "$" + order.order_net.to_s



  .page-content-body-section
    %h1 Import Orders
    = form_tag import_orders_path, multipart: true do
      = file_field_tag :file
      = submit_tag "Import"


:javascript
  $("#table-orders-toship").DataTable({
    dom: 'iCfrtiS',
    pageLength: -1
  });
  $("#table-orders-completed").DataTable({
    dom: 'iCfrtiS',
    pageLength: -1
  });
