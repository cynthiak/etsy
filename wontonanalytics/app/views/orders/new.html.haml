#page-orders.page-content-body
  .page-content-body-section
    %h1 New Order


    =form_for(@order) do |f|
      .form-row
        = f.label :customer, class: 'form-label'
        = f.collection_select(:customer_id, @customers, :id, :display_name, {:prompt => true})
        %span.form-notes 
          =link_to "Create new customer", new_admin_customer_path, target: "_blank"
      
      %br

      .form-row
        = f.label :sale_date, class: 'form-label'
        = f.date_field(:sale_date)
      .form-row
        = f.label :date_shipped, class: 'form-label'
        = f.date_field(:date_shipped)

      %br

      .form-row
        = f.label :number_of_items, class: 'form-label'
        = f.number_field(:number_of_items)

      %br

      .form-row
        = f.label :order_value, class: 'form-label'
        = f.number_field(:order_value)
      .form-row
        = f.label :shipping, class: 'form-label'
        = f.number_field(:shipping)

      .form-row
        = f.label :sales_tax, class: 'form-label'
        = f.number_field(:sales_tax)

      .form-row
        = f.label :order_total, class: 'form-label'
        = f.number_field(:order_total)
        %span.form-notes = order value + shipping + sales tax

      %br

      .form-row
        = f.label :payment_method, class: 'form-label'
        = f.text_field(:payment_method)


      .form-row
        = f.submit "Create Order"

