#page-products.page-content-body
  .page-content-body-section
    %h1 Products

    .stats
      .stat-container
        .stat
          .stat-label Items Sold
          .stat-number
            = @order_items_count 
            items

      .stat-container
        .stat
          .stat-label Cards Sold
          .stat-number
            = @cards_sold_count 
            cards

      .stat-container
        .stat
          .stat-label T-shirts Sold
          .stat-number
            = @tshirts_sold_count 
            t-shirts

      .stat-container
        .stat
          .stat-label Stickers
          .stat-number
            = @stickers_sold_count
            stickers sold

      .stat-container
        .stat
          .stat-label Total Revenue
          .stat-number
            = "$" + @total_revenue.to_s 

      .stat-container
        .stat
          .stat-label Cards Revenue
          .stat-number
            = "$" + @cards_revenue.to_s 

      .stat-container
        .stat
          .stat-label T-shirts Revenue
          .stat-number
            = "$" + @tshirts_revenue.to_s 

      .stat-container
        .stat
          .stat-label Stickers Revenue
          .stat-number
            = "$" + @stickers_revenue.to_s

      .stat-container
        .stat
          .stat-label Average Revenue Per Item
          .stat-number
            = "$" + @average_revenue.to_s + "/item"


      .stat-container
        .stat
          .stat-label Average Revenue Per Card
          .stat-number
            = "$" + @average_cards_revenue.to_s + "/card"

      .stat-container
        .stat
          .stat-label Average Revenue Per T-shirt
          .stat-number
            = "$" + @average_tshirts_revenue.to_s + "/t-shirt"

      .stat-container
        .stat
          .stat-label Average Revenue Per Sticker
          .stat-number
            = "$" + @average_stickers_revenue.to_s + "/sticker"
            

  .page-content-body-section
    %h1 Cards

    %table#table-cards.stripe.order-column
      %thead
        %tr
          %th Type
          %th Item
          %th Occasion
          %th Dimsum
          %th Price
          %th Cost
          %th Sold
          %th Revenue
      %tbody
        - @cards.each do |card|
          %tr
            %td.border-right= card.product_type
            %td.border-right= card.description
            %td= card.occasion
            %td.border-right= card.dimsum
            %td= "$" + card.get_price.to_s
            %td.border-right= "$" + card.get_cost.to_s
            %td= card.get_order_items_count
            %td= "$" + card.get_total_sales.to_s



  .page-content-body-section
    %h1 T-shirts

    %table#table-tshirts.stripe.order-column
      %thead
        %tr
          %th Type
          %th Item
          %th Dimsum
          %th Price
          %th Sold
          %th Revenue
      %tbody
        - @tshirts.each do |tshirt|
          %tr
            %td.border-right= tshirt.product_type
            %td.border-right= tshirt.description
            %td.border-right= tshirt.dimsum
            %td.border-right= "$" + tshirt.get_price.to_s
            %td= tshirt.get_order_items_count
            %td= "$" + tshirt.get_total_sales.to_s

  .page-content-body-section
    %table#table-tshirt-variations.stripe.order-column
      %thead
        %tr
          %th T-shirt
          %th Variation
          %th Price
          %th Cost
          %th Sold
          %th Revenue
      %tbody
        - @tshirts.each do |tshirt|
          - previous_variation = nil
          - tshirt.get_variations.each do |variation|
            - current_variation = variation.gender + "_" + variation.style
            = render :partial => 'tshirtvariation', :locals => {:tshirt => tshirt, :variation => variation, :previous_variation => previous_variation, :current_variation => current_variation}
            - previous_variation = current_variation


  .page-content-body-section
    %h1 Stickers

    %table#table-stickers.stripe.order-column
      %thead
        %tr
          %th Type
          %th Item
          %th Dimsum
          %th Price
          %th Cost
          %th Sold
          %th Revenue
      %tbody
        - @stickers.each do |sticker|
          %tr
            %td.border-right= sticker.product_type
            %td.border-right= sticker.description
            %td.border-right= sticker.dimsum
            %td= "$" + sticker.get_price.to_s
            %td.border-right= "$" + sticker.get_cost.to_s
            %td= sticker.get_order_items_count
            %td= "$" + sticker.get_total_sales.to_s



